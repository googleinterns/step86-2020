{
  "manifest_version": 2,

  "name": "Cloud Debugger Chrome Extension",
  "description": "An extension to use cloud debugger from anywhere.",
  "version": "0.1",

  "browser_action": {
    "default_popup": "src/client/popup/popup.html"
  },
  "permissions": ["activeTab", "identity", "storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["http://github.com/*", "https://github.com/*"],
      "js": ["src/client/injected/github.tsx"]
    },
    {
      "matches": ["http://gitlab.com/*", "https://gitlab.com/*"],
      "js": ["src/client/injected/gitlab.tsx"]
    },
    {
      "matches": ["http://bitbucket.com/*", "https://bitbucket.com/*"],
      "js": ["src/client/injected/bitbucket.tsx"]
    }
  ],
  "background": {
    "scripts": ["./src/background/background.ts"]
  },

  "oauth2": {
    "client_id": "83418787829-oi2em2j1vr46rir80bvkhv8bkbup72o0.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/cloud-platform",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
